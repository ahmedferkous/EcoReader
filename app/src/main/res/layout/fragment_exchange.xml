<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/cardview_default_elevation"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Exchange Rate"
                android:textColor="#808080"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/txtEquals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/mainLinLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEquals"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linLayoutOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtTxtAmount"
                android:layout_width="100dp"
                android:hint="Amount"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edttxt"
                android:inputType="numberDecimal|numberSigned"
                android:maxLength="12" />


            <EditText
                android:id="@+id/edtTxtConvert"
                android:layout_width="100dp"
                android:hint="Conversion"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_edttxt"
                android:inputType="numberDecimal|numberSigned"
                android:maxLength="12" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayoutTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/spinnerAmountConvert"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/rounded_edttxt"
                android:entries="@array/codes"
                android:spinnerMode="dropdown" />

        </LinearLayout>


    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/chartFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mainLinLayout"
        android:layout_margin="15dp" />


</RelativeLayout>